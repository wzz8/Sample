<Window x:Class="Login_Sample.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Sample"
        xmlns:vm="clr-namespace:Login_Sample.ViewModels"
        mc:Ignorable="d"
        Title="登录窗口"
        Height="{Binding WindowHeight}"
        Width="{Binding WindowWidth}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="{Binding Icon}" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#106EBE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsEditable" Value="True"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0 20 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 店号 -->
        <Label Grid.Row="0" Grid.Column="0" Content="店号:" Margin="10,5,10,5" VerticalAlignment="Center" Visibility="{Binding NoVisibility}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,5,20,5" Height="30" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Text="{Binding No, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding NoVisibility}"/>
        
        <!-- 用户名 -->
        <Label Grid.Row="1" Grid.Column="0" Content="用户名:" Margin="10,5,10,5" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,5,20,5" Height="30" IsEditable="True" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
        
        <!-- 密码 -->
        <Label Grid.Row="2" Grid.Column="0" Content="密码:" Margin="10,5,10,5" VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" Margin="0,5,20,5" Height="30" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" vm:PasswordBoxExtensions.PasswordChangedCommand="{Binding PasswordChangedCommand}"/>
        
        <!-- 错误提示 -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,5,20,10" Foreground="Red" TextAlignment="Center" FontSize="14" Visibility="{Binding ErrorVisibility}" Text="{Binding ErrorMessage}"/>
        
        <!-- 登录按钮 -->
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="登录" Margin="20,5,20,5" Height="35" Command="{Binding LoginCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        
        <!-- 注册按钮 -->
        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="注册" Margin="20,5,20,20" Height="35" Command="{Binding RegisterCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        
    </Grid>
</Window>

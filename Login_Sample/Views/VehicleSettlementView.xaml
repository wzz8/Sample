<UserControl x:Class="Login_Sample.Views.VehicleSettlementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Login_Sample.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:Login_Sample.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             Background="#F8F9FA">
    <UserControl.DataContext>
        <viewModels:VehicleSettlementViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 模块标题 -->
        <Border Background="#FFFFFF" Grid.Row="0" Height="80" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <materialDesign:PackIcon Kind="CheckOutline" Width="32" Height="32" Foreground="#3498DB" Margin="0,0,15,0"/>
                <TextBlock Text="车辆结算" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>
        
        <!--主要内容区域-->
        <Grid Grid.Row="1" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!--搜索条件区域-->
            <materialDesign:Card Margin="0,0,0,20">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--标题行-->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Text="搜索条件" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>
                    
                    <!--车牌号-->
                    <Grid Grid.Row="1" Grid.Column="0" Margin="0,5,20,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="车牌号" FontSize="14" FontWeight="Medium" Margin="0,0,0,5" Foreground="#495057"/>
                        <TextBox Width="Auto" materialDesign:HintAssist.Hint="请输入车牌号" 
                                     Text="{Binding LicensePlate, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <!--车主-->
                    <Grid Grid.Row="1" Grid.Column="1" Margin="0,5,20,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="车主" FontSize="14" FontWeight="Medium" Margin="0,0,0,5" Foreground="#495057"/>
                        <TextBox Width="Auto" materialDesign:HintAssist.Hint="请输入车主姓名" 
                                     Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <!--单号-->
                    <Grid Grid.Row="1" Grid.Column="2" Margin="0,5,20,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="单号" FontSize="14" FontWeight="Medium" Margin="0,0,0,5" Foreground="#495057"/>
                        <TextBox Width="Auto" materialDesign:HintAssist.Hint="请输入工单编号" 
                                     Text="{Binding OrderNumber, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <!--状态-->
                    <Grid Grid.Row="1" Grid.Column="3" Margin="0,5,20,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="状态" FontSize="14" FontWeight="Medium" Margin="0,0,0,5" Foreground="#495057"/>
                        <ComboBox ItemsSource="{Binding StatusOptions}" 
                                  SelectedItem="{Binding OrderStatus, UpdateSourceTrigger=PropertyChanged}" 
                                  materialDesign:HintAssist.Hint="请选择状态"/>
                    </Grid>
                    
                    <!--按钮区域-->
                    <StackPanel Grid.Row="1" Grid.Column="4" Orientation="Vertical" Margin="0,0,0,10">
                        <Button Command="{Binding SearchCommand}" Margin="0,0,0,10" Width="100">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Magnify" Margin="0,0,5,0"/>
                                <TextBlock>搜索</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ResetCommand}" Width="100">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Refresh" Margin="0,0,5,0"/>
                                <TextBlock>重置</TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!--结算日期-->
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,15,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="结算日期" FontSize="14" FontWeight="Medium" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#495057"/>
                        <DatePicker Grid.Column="1" Width="180" 
                                             SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Text="至" FontSize="14" Margin="15,0,15,0" VerticalAlignment="Center" Foreground="#495057"/>
                        <DatePicker Grid.Column="3" Width="180" 
                                             SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>
            
            <!--结算列表区域-->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!--操作按钮行-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <Button Command="{Binding SettleCommand}" Width="150">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cash" Margin="0,0,5,0"/>
                            <TextBlock>结算选中项</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!--结算列表-->
                <materialDesign:Card Grid.Row="1">
                    <DataGrid ItemsSource="{Binding SettlementItems}" 
                              SelectedItem="{Binding SelectedSettlementItem, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              RowHeight="35"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="工单编号" Binding="{Binding OrderNumber}" Width="*"/>
                            <DataGridTextColumn Header="车牌号" Binding="{Binding LicensePlate}" Width="*"/>
                            <DataGridTextColumn Header="车主" Binding="{Binding CustomerName}" Width="*"/>
                            <DataGridTextColumn Header="联系电话" Binding="{Binding CustomerPhone}" Width="*"/>
                            <DataGridTextColumn Header="车辆品牌" Binding="{Binding VehicleBrand}" Width="*"/>
                            <DataGridTextColumn Header="车型" Binding="{Binding VehicleModel}" Width="*"/>
                            <DataGridTextColumn Header="接车日期" Binding="{Binding ReceptionDate, StringFormat=yyyy-MM-dd}" Width="*"/>
                            <DataGridTextColumn Header="完工日期" Binding="{Binding CompletedDate, StringFormat=yyyy-MM-dd}" Width="*"/>
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="*">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="已完工">
                                                <Setter Property="Background" Value="#D4EDDA"/>
                                                <Setter Property="Foreground" Value="#155724"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="已结算">
                                                <Setter Property="Background" Value="#D1ECF1"/>
                                                <Setter Property="Foreground" Value="#0C5460"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="总金额" Binding="{Binding TotalAmount, StringFormat=C}" Width="*"/>
                            <DataGridTextColumn Header="故障描述" Binding="{Binding ProblemDescription}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
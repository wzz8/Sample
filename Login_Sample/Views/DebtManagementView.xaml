<UserControl x:Class="Login_Sample.Views.DebtManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Login_Sample.Views"
             xmlns:viewModels="clr-namespace:Login_Sample.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:DebtManagementViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题栏 -->
        <Grid Grid.Row="0" Background="#2C3E50" Height="60">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <materialDesign:PackIcon Kind="Cash" Width="28" Height="28" Foreground="White"/>
                <TextBlock Text="欠账处理" FontSize="20" FontWeight="Bold" Foreground="White" Margin="15,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 主要内容区域 -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- 搜索条件区域 -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="车主:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding OwnerName, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="车牌号:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding LicensePlate, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="委托书号:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding 委托书No, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Command="{Binding SearchVehiclesCommand}" Margin="0,0,10,0" Width="80" Height="30">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="搜索"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RefreshVehiclesCommand}" Width="80" Height="30">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="刷新"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 错误提示 -->
            <Grid Grid.Row="1" Background="#FEEFB3" Visibility="{Binding ErrorVisibility, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,10" Height="40">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <materialDesign:PackIcon Kind="Alert" Width="20" Height="20" Foreground="#9F6000"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#9F6000" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- 数据表格 -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding DebtVehicles}" AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                      SelectedItem="{Binding SelectedVehicle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="车主" Binding="{Binding OwnerName}" Width="120"/>
                    <DataGridTextColumn Header="车牌号" Binding="{Binding LicensePlate}" Width="100"/>
                    <DataGridTextColumn Header="委托书号" Binding="{Binding 委托书No}" Width="150"/>
                    <DataGridTextColumn Header="车辆类型" Binding="{Binding VehicleType}" Width="100"/>
                    <DataGridTextColumn Header="欠账金额" Binding="{Binding DebtAmount}" Width="100"/>
                    <DataGridTextColumn Header="欠账日期" Binding="{Binding DebtDate}" Width="120"/>
                    <DataGridTextColumn Header="最后提醒" Binding="{Binding LastReminderDate}" Width="120"/>
                    <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="处理日期" Binding="{Binding ProcessedDate}" Width="150"/>
                    <DataGridTextColumn Header="备注" Binding="{Binding Remarks}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 操作按钮 -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Command="{Binding MarkAsProcessedCommand}" Width="120" Height="40">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CheckCircle" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="标记已处理"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 加载指示器 -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#BBFFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Loading" Width="60" Height="60" Foreground="#3498DB"/>
                <TextBlock Text="处理中..." FontSize="16" Margin="0,10,0,0" Foreground="#3498DB"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
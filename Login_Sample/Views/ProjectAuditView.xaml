<UserControl x:Class="Login_Sample.Views.ProjectAuditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Login_Sample.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:Login_Sample.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=viewModels:ProjectAuditViewModel}">
    <UserControl.Resources>
        <!-- 空值转可见性转换器 -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 模块标题 -->
        <Border Background="#FFFFFF" Grid.Row="0" Height="80" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <materialDesign:PackIcon Kind="ClipboardCheck" Width="32" Height="32" Foreground="#3498DB" Margin="0,0,15,0"/>
                <TextBlock Text="项目审查" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>
        
        <!-- 模块内容区域 -->
        <Grid Grid.Row="1" Margin="10">
            <!-- 查询条件区域 -->
            <Border Background="#FFFFFF" Margin="0,0,0,10" Padding="10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="车牌号：" Margin="0,0,5,0" VerticalAlignment="Center" />
                    <TextBox Width="150" Text="{Binding LicensePlate}" Margin="0,0,15,0" />
                    <TextBlock Text="工单号：" Margin="0,0,5,0" VerticalAlignment="Center" />
                    <TextBox Width="150" Text="{Binding OrderNumber}" Margin="0,0,15,0" />
                    <Button Content="查询" Command="{Binding SearchCommand}" Padding="10,5" Margin="0,0,10,0" />
                    <Button Content="重置" Command="{Binding ResetCommand}" Padding="10,5" />
                </StackPanel>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- 审查列表区域 -->
                <Border Background="#FFFFFF" Margin="0,0,10,0" Padding="10" Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="待审查工单" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10" />
                        <DataGrid ItemsSource="{Binding AuditWorkOrders}" 
                                  SelectedItem="{Binding SelectedWorkOrder}" 
                                  AutoGenerateColumns="False" 
                                  Height="500" 
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="工单号" Binding="{Binding OrderNumber}" Width="*" />
                                <DataGridTextColumn Header="车牌号" Binding="{Binding Vehicle.LicensePlate}" Width="*" />
                                <DataGridTextColumn Header="接待日期" Binding="{Binding ReceptionDate, StringFormat={}{0:yyyy-MM-dd}}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- 项目详情区域 -->
                <Border Background="#FFFFFF" Margin="10,0,0,0" Padding="10" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="项目详情" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10" />
                        
                        <StackPanel Visibility="{Binding SelectedWorkOrder, Converter={StaticResource NullToVisibilityConverter}}">
                            <!-- 工单基本信息 -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="工单号：" Grid.Row="0" Grid.Column="0" FontWeight="Medium" />
                                <TextBlock Text="{Binding SelectedWorkOrder.OrderNumber}" Grid.Row="0" Grid.Column="1" />
                                <TextBlock Text="车牌号：" Grid.Row="0" Grid.Column="2" FontWeight="Medium" />
                                <TextBlock Text="{Binding SelectedWorkOrder.Vehicle.LicensePlate}" Grid.Row="0" Grid.Column="3" />
                                
                                <TextBlock Text="车型：" Grid.Row="1" Grid.Column="0" FontWeight="Medium" />
                                <TextBlock Grid.Row="1" Grid.Column="1">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="SelectedWorkOrder.Vehicle.VehicleBrand" />
                                            <Binding Path="SelectedWorkOrder.Vehicle.VehicleModel" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock Text="接待日期：" Grid.Row="1" Grid.Column="2" FontWeight="Medium" />
                                <TextBlock Text="{Binding SelectedWorkOrder.ReceptionDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Grid.Row="1" Grid.Column="3" />
                                
                                <TextBlock Text="接待员：" Grid.Row="2" Grid.Column="0" FontWeight="Medium" />
                                <TextBlock Text="{Binding SelectedWorkOrder.ServiceAdvisor}" Grid.Row="2" Grid.Column="1" />
                                <TextBlock Text="总金额：" Grid.Row="2" Grid.Column="2" FontWeight="Medium" />
                                <TextBlock Text="{Binding SelectedWorkOrder.TotalAmount, StringFormat={}{0:C}}" Grid.Row="2" Grid.Column="3" Foreground="#E74C3C" FontWeight="Bold" />
                            </Grid>
                            
                            <!-- 故障描述 -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="故障描述：" FontWeight="Medium" Margin="0,0,0,5" />
                                <TextBlock Text="{Binding SelectedWorkOrder.ProblemDescription}" TextWrapping="Wrap" />
                            </StackPanel>
                            
                            <!-- 维修项目列表 -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="维修项目：" FontWeight="Medium" Margin="0,0,0,10" />
                                <DataGrid ItemsSource="{Binding SelectedWorkOrder.MaintenanceItems}" 
                                          AutoGenerateColumns="False" 
                                          Height="300" 
                                          CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="项目名称" Binding="{Binding ItemName}" Width="*" />
                                        <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="*" />
                                        <DataGridTextColumn Header="单价" Binding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="80" />
                                        <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="60" />
                                        <DataGridTextColumn Header="小计" Binding="{Binding Subtotal, StringFormat={}{0:C}}" Width="80" />
                                        <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                            
                            <!-- 审查按钮 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="审查通过" 
                                        Command="{Binding AuditCommand}" 
                                        Padding="20,10" 
                                        Background="#28A745" 
                                        Foreground="White" 
                                        BorderThickness="0">
                                    <Button.ToolTip>
                                        <ToolTip>审查通过后，车辆将不能再新增项目</ToolTip>
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 未选择工单提示 -->
                        <StackPanel Visibility="{Binding SelectedWorkOrder, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=True}" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
                            <materialDesign:PackIcon Kind="AlertCircle" Width="64" Height="64" Foreground="#6C757D" />
                            <TextBlock Text="请选择一个待审查的工单" FontSize="18" Foreground="#6C757D" Margin="0,20,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
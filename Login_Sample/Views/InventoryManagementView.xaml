<UserControl x:Class="Login_Sample.Views.InventoryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Login_Sample.Converters"
             xmlns:vm="clr-namespace:Login_Sample.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:InventoryManagementViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <!-- NullToVisibilityConverter转换器 -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 模块标题 -->
        <Border Background="#FFFFFF" Grid.Row="0" Height="80" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <materialDesign:PackIcon Kind="Warehouse" Width="32" Height="32" Foreground="#3498DB" Margin="0,0,15,0"/>
                <TextBlock Text="库存管理" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>
        
        <!-- 模块内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：库存配件和出入库记录 -->
            <Border Background="#FFFFFF" Margin="10" CornerRadius="5" Grid.Column="0">
                <StackPanel>
                    <!-- 搜索和刷新 -->
                    <StackPanel Orientation="Horizontal" Margin="15,15,15,15" HorizontalAlignment="Stretch">
                        <TextBox 
                            materialDesign:HintAssist.Hint="搜索配件 (名称/编号)"
                            Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                            Width="300"
                            />
                        <Button 
                            Command="{Binding RefreshCommand}"
                            Margin="10,0,0,0"
                            ToolTip="刷新数据"
                            >
                            <materialDesign:PackIcon Kind="Refresh"/>
                        </Button>
                    </StackPanel>
                    
                    <!-- 库存配件列表 -->
                    <TextBlock Text="库存配件" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,0,0,10"/>
                    <DataGrid
                        AutoGenerateColumns="False"
                        Margin="10"
                        CanUserAddRows="False"
                        ItemsSource="{Binding InventoryItems}"
                        SelectedItem="{Binding SelectedItem}"
                        RowHeight="40"
                        IsSynchronizedWithCurrentItem="True"
                        >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="配件编号" Binding="{Binding ItemNumber}" Width="120"/>
                            <DataGridTextColumn Header="配件名称" Binding="{Binding ItemName}" Width="180"/>
                            <DataGridTextColumn Header="库存数量" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="单价" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="供应商" Binding="{Binding Supplier}" Width="150"/>
                            <DataGridTextColumn Header="库存状态" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="仓库位置" Binding="{Binding WarehouseLocation}" Width="120"/>
                            <DataGridTextColumn Header="最后更新" Binding="{Binding LastUpdatedTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- 出入库动态 -->
                    <TextBlock Text="出入库动态" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,20,0,10"/>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 入库记录 -->
                        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                            <StackPanel>
                                <TextBlock Text="近期入库" FontSize="14" FontWeight="Bold" Foreground="#3498DB" Margin="0,0,0,10"/>
                                <DataGrid
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    ItemsSource="{Binding InventoryInRecords}"
                                    RowHeight="35"
                                    MaxHeight="200"
                                    >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="入库日期" Binding="{Binding InboundDate, StringFormat=MM-dd HH:mm}" Width="100"/>
                                        <DataGridTextColumn Header="入库单号" Binding="{Binding InboundNumber}" Width="120"/>
                                        <DataGridTextColumn Header="入库人" Binding="{Binding InboundPerson}" Width="80"/>
                                        <DataGridTextColumn Header="金额" Binding="{Binding TotalAmountWithTax, StringFormat=C}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                        
                        <!-- 销售记录 -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="近期销售" FontSize="14" FontWeight="Bold" Foreground="#E74C3C" Margin="0,0,0,10"/>
                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                ItemsSource="{Binding SparePartsSales}"
                                RowHeight="35"
                                MaxHeight="200"
                                >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="销售日期" Binding="{Binding SaleDate, StringFormat=MM-dd HH:mm}" Width="100"/>
                                    <DataGridTextColumn Header="配件名称" Binding="{Binding InventoryItem.ItemName}" Width="120"/>
                                    <DataGridTextColumn Header="销售数量" Binding="{Binding QuantitySold}" Width="80"/>
                                    <DataGridTextColumn Header="销售金额" Binding="{Binding TotalAmount, StringFormat=C}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 右侧：库存设置 -->
            <Border Background="#FFFFFF" Margin="10" CornerRadius="5" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="库存设置" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,15,0,15"/>
                    
                    <!-- 价格调整 -->
                    <materialDesign:Card Margin="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="价格调整" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <StackPanel Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="当前配件：" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedItem.ItemName}" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="当前价格：" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedItem.UnitPrice, StringFormat=C}" Margin="0,0,0,10"/>
                                
                                <TextBox
                                    materialDesign:HintAssist.Hint="新价格"
                                    Text="{Binding NewPrice, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,10"/>
                                <Button
                                    Content="确认调整"
                                    Background="#3498DB"
                                    Foreground="White"
                                    Command="{Binding AdjustPriceCommand}"
                                    Margin="0,0,0,10"
                                    Height="36"
                                    />
                            </StackPanel>
                            <TextBlock Text="请选择要调整价格的配件" Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Collapsed}" Foreground="Gray"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- 出库控制 -->
                    <materialDesign:Card Margin="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="出库控制" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <StackPanel Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="当前配件：" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedItem.ItemName}" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="当前库存：" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedItem.Quantity}" Margin="0,0,0,10"/>
                                
                                <TextBox
                                    materialDesign:HintAssist.Hint="最低库存（示例）"
                                    Text="{Binding MinInventory, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,10"/>
                                <Button
                                    Content="更新设置"
                                    Background="#27AE60"
                                    Foreground="White"
                                    Command="{Binding UpdateMinInventoryCommand}"
                                    Margin="0,0,0,10"
                                    Height="36"
                                    />
                            </StackPanel>
                            <TextBlock Text="请选择要设置的配件" Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Collapsed}" Foreground="Gray"/>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
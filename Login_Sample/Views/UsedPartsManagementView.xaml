<UserControl x:Class="Login_Sample.Views.UsedPartsManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Login_Sample.Views"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 模块标题 -->
        <Border Background="#FFFFFF" Grid.Row="0" Height="80" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <materialDesign:PackIcon Kind="Package" Width="32" Height="32" Foreground="#3498DB" Margin="0,0,15,0"/>
                <TextBlock Text="旧件管理" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>
        
        <!-- 模块内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：旧件类型 -->
            <Border Background="#FFFFFF" Margin="10" CornerRadius="5" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="旧件类型" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,15,0,15"/>
                    
                    <materialDesign:Card Margin="10" Padding="10">
                        <StackPanel>
                            <Button Content="保修旧件" Background="#3498DB" Foreground="White" Margin="0,5,0,5" Command="{Binding WarrantyUsedPartsCommand}"/>
                            <Button Content="维修旧件" Background="#3498DB" Foreground="White" Margin="0,5,0,5" Command="{Binding MaintenanceUsedPartsCommand}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <TextBlock Text="旧件处理方式" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="15,20,0,10"/>
                    <ListBox Margin="10">
                        <ListBoxItem>客户带走</ListBoxItem>
                        <ListBoxItem>服务站回收</ListBoxItem>
                        <ListBoxItem>厂家保修</ListBoxItem>
                        <ListBoxItem>废弃处理</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>
            
            <!-- 右侧：旧件列表和详情 -->
            <Border Background="#FFFFFF" Margin="10" CornerRadius="5" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="旧件列表" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,15,0,15"/>
                    
                    <!-- 搜索和筛选 -->
                    <StackPanel Orientation="Horizontal" Margin="15,0,15,15">
                        <TextBox Width="200" materialDesign:HintAssist.Hint="旧件编号" Margin="0,0,10,0"/>
                        <ComboBox Width="150" materialDesign:HintAssist.Hint="旧件类型" Margin="0,0,10,0">
                            <ComboBoxItem Content="全部"/>
                            <ComboBoxItem Content="保修旧件"/>
                            <ComboBoxItem Content="维修旧件"/>
                        </ComboBox>
                        <ComboBox Width="150" materialDesign:HintAssist.Hint="处理状态" Margin="0,0,10,0">
                            <ComboBoxItem Content="全部"/>
                            <ComboBoxItem Content="待处理"/>
                            <ComboBoxItem Content="已处理"/>
                            <ComboBoxItem Content="已废弃"/>
                        </ComboBox>
                        <Button Content="搜索" Background="#3498DB" Foreground="White"/>
                        <Button Content="刷新" Background="#95A5A6" Foreground="White" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- 旧件列表 -->
                    <DataGrid AutoGenerateColumns="False" Margin="15,0,15,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="旧件编号" Width="120"/>
                            <DataGridTextColumn Header="旧件名称" Width="150"/>
                            <DataGridTextColumn Header="车辆信息" Width="150"/>
                            <DataGridTextColumn Header="旧件类型" Width="100"/>
                            <DataGridTextColumn Header="处理方式" Width="100"/>
                            <DataGridTextColumn Header="处理状态" Width="100"/>
                            <DataGridTextColumn Header="处理日期" Width="120"/>
                            <DataGridTemplateColumn Header="操作" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="详情" Background="#3498DB" Foreground="White" Width="60"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- 旧件处理记录 -->
                    <TextBlock Text="旧件处理记录" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="15,0,0,10"/>
                    <Border Background="#F8F9FA" Margin="15,0,15,15" Height="200" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                        <StackPanel Margin="15">
                            <TextBlock Text="最近处理记录" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <ListBox>
                                <ListBoxItem>旧件A - 客户带走 - 2026-01-24 - 张三</ListBoxItem>
                                <ListBoxItem>旧件B - 服务站回收 - 2026-01-23 - 李四</ListBoxItem>
                                <ListBoxItem>旧件C - 厂家保修 - 2026-01-22 - 王五</ListBoxItem>
                                <ListBoxItem>旧件D - 废弃处理 - 2026-01-21 - 赵六</ListBoxItem>
                                <ListBoxItem>旧件E - 客户带走 - 2026-01-20 - 钱七</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
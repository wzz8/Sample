<UserControl x:Class="Login_Sample.Views.SparePartsSaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Login_Sample.Views"
             xmlns:vm="clr-namespace:Login_Sample.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:SparePartsSaleViewModel, IsDesignTimeCreatable=True}">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 模块标题 -->
        <Border Background="#FFFFFF" Grid.Row="0" Height="80" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <materialDesign:PackIcon Kind="CashRegister" Width="32" Height="32" Foreground="#3498DB" Margin="0,0,15,0"/>
                <TextBlock Text="配件销售" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>
        
        <!-- 模块内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：销售表单 -->
            <Border Background="#FFFFFF" Margin="10" CornerRadius="5" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="销售信息" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,15,0,15"/>
                    
                    <materialDesign:Card Margin="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="客户信息" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <TextBox
                                materialDesign:HintAssist.Hint="客户姓名"
                                Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                            <TextBox
                                materialDesign:HintAssist.Hint="客户电话"
                                Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                            
                            <TextBlock Text="配件信息" FontWeight="Bold" Margin="0,15,0,10"/>
                            
                            <TextBox
                                materialDesign:HintAssist.Hint="搜索配件 (名称/编号)"
                                Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                            
                            <ComboBox
                                ItemsSource="{Binding InventoryItems}"
                                SelectedItem="{Binding SelectedItem}"
                                Margin="0,0,0,10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding ItemName}" Width="150"/>
                                            <TextBlock Text="{Binding ItemNumber}" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <TextBlock Text="销售信息" FontWeight="Bold" Margin="0,15,0,10"/>
                            
                            <TextBox
                                materialDesign:HintAssist.Hint="销售数量"
                                Text="{Binding QuantitySold, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"
                                TextAlignment="Right"
                                PreviewTextInput="NumericOnlyPreviewTextInput"/>
                            <TextBox
                                materialDesign:HintAssist.Hint="单价"
                                Text="{Binding UnitPrice, StringFormat=C, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"
                                TextAlignment="Right"
                                IsReadOnly="True"/>
                            <TextBox
                                materialDesign:HintAssist.Hint="销售总额"
                                Text="{Binding TotalAmount, StringFormat=C, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"
                                TextAlignment="Right"
                                IsReadOnly="True"/>
                            <TextBox
                                materialDesign:HintAssist.Hint="销售人"
                                Text="{Binding SalesPerson, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,10"/>
                            
                            <materialDesign:Card Margin="0,10,0,0" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="备注" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBox
                                        Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}"
                                        AcceptsReturn="True"
                                        MinHeight="60"
                                        />
                                </StackPanel>
                            </materialDesign:Card>
                            
                            <Button
                                Content="确认销售"
                                Background="#27AE60"
                                Foreground="White"
                                Command="{Binding SellCommand}"
                                Margin="0,15,0,0"
                                Height="36"
                                />
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Border>
            
            <!-- 右侧：配件列表 -->
            <Border Background="#FFFFFF" Margin="10" CornerRadius="5" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="库存配件" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="15,15,0,15"/>
                    
                    <DataGrid
                        AutoGenerateColumns="False"
                        Margin="10"
                        CanUserAddRows="False"
                        ItemsSource="{Binding InventoryItems}"
                        SelectedItem="{Binding SelectedItem}"
                        RowHeight="40"
                        >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="配件编号" Binding="{Binding ItemNumber}" Width="120"/>
                            <DataGridTextColumn Header="配件名称" Binding="{Binding ItemName}" Width="180"/>
                            <DataGridTextColumn Header="库存数量" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="单价" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="供应商" Binding="{Binding Supplier}" Width="150"/>
                            <DataGridTextColumn Header="库存状态" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="仓库位置" Binding="{Binding WarehouseLocation}" Width="120"/>
                            <DataGridTextColumn Header="最后更新" Binding="{Binding LastUpdatedTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
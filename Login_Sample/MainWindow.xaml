<Window x:Class="Login_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Sample"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="企业管理系统" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 侧边栏 -->
        <Border Background="#2C3E50" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>

                    <!-- 系统标题 -->
                    <Border Background="#3498DB" Height="60">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="企业管理系统" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Enterprise Management System" FontSize="12" Foreground="#E0E0E0" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="主菜单" FontSize="12" Foreground="#BDC3C7" Margin="0,10,0,5"/>

                    <!--仪表盘-->
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Dashboard">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="仪表盘"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="Dashboard">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- 导航菜单 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <StackPanel>

                        <!-- 业务接待主菜单 -->
                        <Expander Background="#2C3E50" Margin="0,5,0,0" BorderThickness="0" HorizontalAlignment="Stretch" MouseDoubleClick="Expander_MouseDoubleClick">

                            <Expander.Header>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="BusinessReception" HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="业务接待"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="BusinessReception">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Expander.Header>

                            <!-- 子菜单 -->
                            <StackPanel Margin="20,0,0,0">
                                <Button Command="{Binding NavigateCommand}" CommandParameter="AppointmentManagement">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CalendarClock" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="预约管理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="AppointmentManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="VehicleMaintenance">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CarRepair" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="车辆维修"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="VehicleMaintenance">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="MaintenanceQuery">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="维修查询"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="MaintenanceQuery">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="ProjectQuery">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ClipboardList" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="项目查询"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="ProjectQuery">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="RepairProgress">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ProgressClock" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="维修进度"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="RepairProgress">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="InventoryQuery">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Database" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="库存查询"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="InventoryQuery">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="ShortageManagement">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PackageVariantClosed" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="缺件管理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="ShortageManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="InsuranceManagement">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CarInsurance" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="保险管理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="InsuranceManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!--财务结算-->
                        <Expander Background="#2C3E50" Margin="0,5,0,0" BorderThickness="0" HorizontalAlignment="Stretch" MouseDoubleClick="Expander_MouseDoubleClick">
                            <Expander.Header>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="FinancialSettlement" HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Cash" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="财务结算"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="FinancialSettlement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Expander.Header>
                            <StackPanel>
                                <!--车辆结算-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="VehicleSettlement" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Car" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="车辆结算"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="VehicleSettlement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--销售结算-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SalesSettlement" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CashRegister" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="销售结算"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SalesSettlement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--款项处理-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="PaymentProcessing" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Bank" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="款项处理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="PaymentProcessing">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--财务审核-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="FinancialAudit" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CheckCircle" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="财务审核"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="FinancialAudit">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--改结算-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SettlementModification" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Edit" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="改结算"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SettlementModification">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--欠账处理-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="DebtManagement" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Cash" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="欠账处理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="DebtManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--预收预付-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="PrepaymentManagement" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CreditCard" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="预收预付"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="PrepaymentManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--消费积分-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="ConsumptionPoints" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Star" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="消费积分"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="ConsumptionPoints">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!--备件管理-->
                        <Expander Background="#2C3E50" Margin="0,5,0,0" BorderThickness="0" HorizontalAlignment="Stretch" MouseDoubleClick="Expander_MouseDoubleClick">
                            <Expander.Header>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SparePartsManagement" HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Box" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="备件管理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SparePartsManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Expander.Header>
                            <StackPanel>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SparePartsInbound" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Warehouse" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="备件入库"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SparePartsInbound">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SparePartsOutbound" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PackageUp" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="备件出库"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SparePartsOutbound">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SparePartsSale" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CashRegister" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="配件销售"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SparePartsSale">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="InventoryManagement" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Database" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="库存管理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="InventoryManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="SparePartsCatalog" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="BookOpenPageVariant" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="备件目录"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="SparePartsCatalog">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding NavigateCommand}" CommandParameter="InventoryCheck" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ClipboardCheck" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="库存盘点"/>
                                    </StackPanel>

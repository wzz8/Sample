                                        <materialDesign:PackIcon Kind="Car" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="服务车管理"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="ServiceVehicleManagement">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!--关于我们-->
                                <Button Command="{Binding NavigateCommand}" CommandParameter="AboutUs" Margin="30,5,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Information" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="关于我们"/>
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentModule}" Value="AboutUs">
                                                    <Setter Property="Background" Value="#2C3E50"/>
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                    <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                            </StackPanel>
                        </Expander>

                        <!-- 退出按钮 -->
                        <Button Style="{StaticResource NavButtonStyle}" Command="{Binding LogoutCommand}" Margin="0,30,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Logout" Width="20" Height="20" Margin="0,0,10,0"/>
                                <TextBlock Text="退出登录"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Column="1">

            <!-- 顶部标题栏 -->
            <Border Background="WhiteSmoke" Height="60" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <materialDesign:PackIcon Kind="Account" Width="24" Height="24" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="当前用户" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock Text="{Binding CurrentUser}" FontSize="14" FontWeight="Bold" Foreground="#2C3E50"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentTime}" FontSize="14" Foreground="#7F8C8D" Margin="0,0,20,0"/>
                </StackPanel>
            </Border>

            <!-- 内容区域 -->
            <ContentControl Margin="0,60,0,0" Content="{Binding CurrentView}" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
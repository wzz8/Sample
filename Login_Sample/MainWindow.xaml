<Window x:Class="Login_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Sample"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="企业管理系统" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 侧边栏 -->
        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel>
                <!-- 系统标题 -->
                <Border Background="#3498DB" Height="80">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="企业管理系统" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Enterprise Management System" FontSize="12" Foreground="#E0E0E0" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 导航菜单 -->
                <StackPanel Margin="10,20,10,10">
                    <TextBlock Text="主菜单" FontSize="12" Foreground="#BDC3C7" Margin="0,10,0,5"/>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Dashboard">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="仪表盘"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="Dashboard">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <!-- 业务接待主菜单 -->
                    <Expander Background="#2C3E50" Margin="0,5,0,0" BorderThickness="0" HorizontalAlignment="Stretch">
                        <Expander.Header>
                            <Button Command="{Binding NavigateCommand}" CommandParameter="BusinessReception" Style="{StaticResource NavButtonStyle}" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="业务接待"/>
                                </StackPanel>
                            </Button>
                        </Expander.Header>
                        
                        <!-- 子菜单 -->
                        <StackPanel Margin="20,0,0,0">
                            <Button Command="{Binding NavigateCommand}" CommandParameter="VehicleMaintenance">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CarRepair" Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="车辆维修"/>
                                </StackPanel>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentModule}" Value="VehicleMaintenance">
                                                <Setter Property="Background" Value="#2C3E50"/>
                                                <Setter Property="BorderBrush" Value="#3498DB"/>
                                                <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Command="{Binding NavigateCommand}" CommandParameter="MaintenanceQuery">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="维修查询"/>
                                </StackPanel>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentModule}" Value="MaintenanceQuery">
                                                <Setter Property="Background" Value="#2C3E50"/>
                                                <Setter Property="BorderBrush" Value="#3498DB"/>
                                                <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Expander>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="FinancialSettlement">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cash" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="财务结算"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="FinancialSettlement">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="SparePartsManagement">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Box" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="备件管理"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="SparePartsManagement">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="WorkshopManagement">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Factory" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="车间管理"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="WorkshopManagement">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="LeadershipQuery">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ChartLine" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="领导查询"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="LeadershipQuery">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="SystemManagement">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cog" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="系统管理"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="SystemManagement">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="CustomerManagement">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="客户管理"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="CustomerManagement">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding NavigateCommand}" CommandParameter="RawInventory">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Warehouse" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="原始库存"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentModule}" Value="RawInventory">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 退出按钮 -->
                    <Button Style="{StaticResource NavButtonStyle}" Command="{Binding LogoutCommand}" Margin="0,30,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Logout" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="退出登录"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Column="1">
            <!-- 顶部标题栏 -->
            <Border Background="WhiteSmoke" Height="60" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <materialDesign:PackIcon Kind="Account" Width="24" Height="24" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="当前用户" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock Text="{Binding CurrentUser}" FontSize="14" FontWeight="Bold" Foreground="#2C3E50"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentTime}" FontSize="14" Foreground="#7F8C8D" Margin="0,0,20,0"/>
                </StackPanel>
            </Border>
            
            <!-- 内容区域 -->
            <ContentControl Margin="0,60,0,0" Content="{Binding CurrentView}" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
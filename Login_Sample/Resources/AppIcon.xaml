<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DrawingImage x:Key="AppIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <!-- 背景矩形 -->
                <GeometryDrawing Brush="#0078D7">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,64,64" RadiusX="8" RadiusY="8"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <!-- 用户图标 -->
                <GeometryDrawing Brush="White">
                    <GeometryDrawing.Geometry>
                        <CombinedGeometry GeometryCombineMode="Union"
                                          Geometry1="M32,12 A12,12 0 1,1 32,36 A12,12 0 1,1 32,12 Z"
                                          Geometry2="M32,36 L32,56 M22,46 L42,46"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Thickness="4" Brush="White"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>
</ResourceDictionary>
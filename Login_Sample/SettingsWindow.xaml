<Window x:Class="Login_Sample.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Sample"
        xmlns:vm="clr-namespace:Login_Sample.ViewModels"
        mc:Ignorable="d"
        Title="设置"
        Height="440"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="{Binding Icon}" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#106EBE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="服务器设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        
        <!-- 服务器地址 -->
        <Label Grid.Row="1" Grid.Column="0" Content="服务器地址:" Margin="10,5,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5,20,5" Height="30" Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}"/>
        
        <!-- 服务器端口 -->
        <Label Grid.Row="2" Grid.Column="0" Content="服务器端口:" Margin="10,5,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5,20,5" Height="30" Text="{Binding ServerPort, UpdateSourceTrigger=PropertyChanged}"/>
        
        <!-- 分隔线 -->
        <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,15"/>
        
        <!-- 是否使用代理服务器 -->
        <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="是否使用代理服务器" Margin="10,5,10,10" HorizontalAlignment="Left" IsChecked="{Binding UseProxy, UpdateSourceTrigger=PropertyChanged}"/>
        
        <!-- 代理服务器地址 -->
        <Label Grid.Row="5" Grid.Column="0" Content="代理服务器地址:" Margin="30,5,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="0,5,20,5" Height="30" Text="{Binding ProxyAddress, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding UseProxy}"/>
        
        <!-- 代理服务器端口 -->
        <Label Grid.Row="6" Grid.Column="0" Content="代理服务器端口:" Margin="30,5,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="0,5,20,5" Height="30" Text="{Binding ProxyPort, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding UseProxy}"/>
        
        <!-- 错误提示 -->
        <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,5,20,10" Foreground="Red" TextAlignment="Center" FontSize="14" Visibility="{Binding ErrorVisibility}" Text="{Binding ErrorMessage}"/>
        
        <!-- 按钮容器 -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="保存" Margin="5,5,5,5" Height="35" Width="80" Command="{Binding SaveCommand}"/>
            <Button Content="取消" Margin="5,5,5,5" Height="35" Width="80" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>